  "bugs": {
    "url": "https://github.com/karthickram286/Revista/issues"
  },
  "homepage": "https://github.com/karthickram286/Revista#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "config": "^3.2.2",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.8",
    "password-validator": "^4.1.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "jest": "^24.8.0",
